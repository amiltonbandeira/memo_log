<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="message_memo_icon" inherit_id="mail.message">
            <xpath expr="//div[contains(@class, 'o_mail_message_controls')]" position="inside">
                <a t-att-title="'Create Memo'" class="o_message_memo" role="button">
                    <i class="fa fa-sticky-note" aria-label="Memo"></i>
                </a>
            </xpath>
        </template>
    </data>
</odoo>
